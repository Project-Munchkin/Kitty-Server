<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.munchkin.dao.UserDao">

	<insert id="add" parameterType="com.munchkin.user.domain.User">
		INSERT INTO user (gender, body_type, height, create_time)
		VALUES (#{gender.value}, #{bodyType.value}, #{height}, now());
	</insert>

	<select id="getAll" resultType="com.munchkin.user.domain.User">
		SELECT * FROM user;
	</select>

	<delete id="removeAll">
		DELETE FROM user;
	</delete>
</mapper>
